[diff]
	guitool = kdiff3
[difftool "kdiff3"]
	cmd = \"$SCOOP/apps/kdiff3/current/bin/kdiff3.exe\" \"$LOCAL\" \"$REMOTE\"
	path = $SCOOP/apps/kdiff3/current/bin/kdiff3.exe
[merge]
	guitool = kdiff3
[mergetool "kdiff3"]
	cmd = \"$SCOOP/apps/kdiff3/current/bin/kdiff3.exe\" \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	path = $SCOOP/apps/kdiff3/current/bin/kdiff3.exe
